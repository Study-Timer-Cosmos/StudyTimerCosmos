@model StudyTimer.MVC.Models.Home.HomeGetStatisticsViewModel

<br />
<br />
<br />
<br />
<br />

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Study Statistics</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            background-image: url('data:image/svg+xml,%3Csvg width="200" height="200" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="%23ced4da" fill-opacity="0.4"%3E%3Cpath d="M41 0h40v40H41z"/%3E%3Cpath d="M0 41h40v40H0z" opacity=".5" /%3E%3C/g%3E%3C/svg%3E');
        }

        .card {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th, .table td {
            border: none;
            padding: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body class="bg-gray-300 d-flex justify-content-center align-items-center">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card p-4">
                    <h2 class="mb-4 text-center">Your Study Statistics 📊</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Stat</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Total Study Sessions</td>
                                <td>@Model.TotalStudySessions</td>
                            </tr>
                            <tr>
                                <td>Total Study Time</td>
                                <td>@Model.TotalStudyTime</td>
                            </tr>
                            <tr>
                                <td>Most Studied Topic</td>
                                <td>@Model.MostStudiedTopic</td>
                            </tr>
                            <tr>
                                <td>Total Completed Duties</td>
                                <td>@Model.TotalCompletedDuties</td>
                            </tr>
                            <tr>
                                <td>Total Incomplete Duties</td>
                                <td>@Model.TotalIncompleteDuties</td>
                            </tr>
                            <tr>
                                <td>Last Study Session Date</td>
                                <td>@Model.LastStudySessionDate</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
