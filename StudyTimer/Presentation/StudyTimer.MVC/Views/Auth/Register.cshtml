@using StudyTimer.MVC.Models.Auth;
@using StudyTimer.Domain.Enums;
@model AuthViewModel



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Space-themed Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

    <div class="min-h-screen flex items-center justify-center">
        <div class="w-full max-w-xs">
        <form asp-action="Register" asp-controller="Auth" method="post" class="text-white bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4" novalidate>
                <div class="mb-4">
                    <h2 class="text-center text-3xl mb-6">🚀 Register</h2>
                    <div class="form-group mb-3">
                          <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="Email"> 📧 Email</label>
                        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>
                    </div>
                    <div class="form-group mb-3">
                    <div class="form-group">

                        <label class="block text-black text-sm font-bold mb-2" for="UserName">🌌 Username</label>
                        <input asp-for="UserName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="UserName" type="text" placeholder="Username">
                        <span asp-validation-for="UserName" class="text-red-500"></span>
                    </div>
                    </div>

                    <div class="form-group mb-3">
                    <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="Password"> 🔑 Password </label>
                        <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="Password" type="password" placeholder="******************">
                        <span asp-validation-for="Password" class="text-red-500"></span>
                    </div>
                    </div>

                    <div class="form-group mb-3">
                    <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="FirstName"> 🚀 First Name </label>
                        <input asp-for="FirstName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="FirstName" type="text" placeholder="First Name" required>
                        <span asp-validation-for="FirstName" class="text-red-500"></span>
                    </div>
                    </div>
                    <div class="form-group mb-3">
                    <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="LastName"> 🌌 Last Name </label>
                        <input asp-for="LastName" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="LastName" type="text" placeholder="Last Name" required>
                        <span asp-validation-for="LastName" class="text-red-500"></span>
                    </div>
                    </div>
                    <div class="form-group mb-3">
                    <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="BirthDate"> 📅 Birth Date </label>
                        <input asp-for="BirthDate" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="BirthDate" type="date">
                        <span asp-validation-for="BirthDate" class="text-red-500"></span>
                    </div>
                    </div>
                    <div class="form-group mb-3">
                    <div class="form-group">
                        <label class="block text-black text-sm font-bold mb-2" for="Gender"> 🚻 Gender </label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="Gender" required>
                            <option value="">Select Gender</option>
                        </select>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>

